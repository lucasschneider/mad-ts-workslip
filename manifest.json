{
  "manifest_version": 2,
  "name": "MAD-TS Workslip",
  "version": "1.2",
  "author": "Lucas Schneider",
  "description": "Context menu link to print TS workslips for Madison Central Library of Wisconsin's South Central Library System",
  "homepage_url": "https://lrschneider.com/mad-ts-workslip-chrome",

  "incognito": "spanning",

  "icons": {
      "16": "/img/icon16.png",
      "32": "/img/icon32.png",
      "48": "/img/icon48.png",
      "64": "/img/icon64.png",
      "128": "/img/icon128.png"
    },

    "background": {
      "scripts": [
        "/background.js"
      ],
      "persistent": true
    },

    "content_scripts": [
      {
        "matches": [
          "https://mad.scls.kohalibrary.com/app/staff/acquisitions",
          "https://mad.scls.kohalibrary.com/getit/app/static/partials/index-dev.html",
          "https://mad.scls.kohalibrary.com/cgi-bin/koha/acqui/getit.pl"
        ],
        "js": [
          "/ctrlColonPrint.js"
        ],
        "all_frames": true
      }
    ],

    "permissions": [
      "contextMenus",
      "tabs",
      "*://*.kohalibrary.com/*"
    ]
}
